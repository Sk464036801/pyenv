#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

%:
	dh $@

override_dh_auto_install:
	mkdir -p debian/pyenv/usr/share/man/man1
	ronn --roff --warnings debian/pyenv.1.ronn
	ronn --roff --warnings debian/python-build.1.ronn
	dh_auto_install

get-orig-source:
	uscan --download-current-version --force-download --rename
